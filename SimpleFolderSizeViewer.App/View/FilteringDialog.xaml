<Window x:Class="SimpleFolderSizeViewer.App.FilteringDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleFolderSizeViewer.App"
        mc:Ignorable="d"
        Title="FilteringDialog" Height="182.6" Width="501.6">
    <Grid>
        <GroupBox Header="Filering" Padding="10" Margin="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="None" Height="25" Margin="10"/>
                    <RadioButton Content="Size" Height="25" Margin="10"/>
                    <RadioButton Content="Percent" Height="25" Margin="10"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <Label Content="StartRange"/>
                    <TextBox Height="23" Text="TextBox" Width="120"/>
                    <Label Content="EndRange"/>
                    <TextBox Height="23" Text="TextBox" Width="120"/>
                </StackPanel>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
